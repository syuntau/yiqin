<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
<!-- 	<constant name="struts.locale" value="zh_CN" /> -->
	<constant name="struts.custom.i18n.resources" value="app, shop_config" />
	<constant name="struts.ui.theme" value="simple"></constant>
	<constant name="struts.i18n.encoding" value="utf-8"></constant>
	<constant name="struts.action.extension" value="action"></constant>
	<constant name="struts.devMode" value="true"></constant>

	<include file="struts-default.xml" />
	<package name="shop" extends="struts-default">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<interceptors>
			<interceptor name="setNav" class="com.yiqin.shop.interceptor.ShopNavInterceptor" />
		</interceptors>

		<action name="index">
			<result type="tiles">shop.index</result>
		</action>

		<action name="login" class="com.yiqin.shop.action.LoginAction">
			<result name="login" type="tiles">shop.login</result>
			<result name="success" type="tiles">shop.index</result>
		</action>
		
		<action name="logout" class="com.yiqin.shop.action.LogoutAction">
			<result name="login" type="tiles">shop.login</result>
		</action>
		
		<action name="register" class="com.yiqin.shop.action.RegisteredUserAction">
			<result name="success" type="tiles">shop.login</result>
		</action>

		<action name="dispatcher" class="com.yiqin.shop.action.ShopNavDispatcherAction">
			<interceptor-ref name="setNav"></interceptor-ref>
			<result name="top_account" type="chain">login</result>
			<result name="top_quick_shopping" type="chain">login</result>
			<result name="top_cart" type="chain">login</result>
			<result name="top_login" type="chain">login</result>
			<result name="top_home" type="chain">login</result>
		</action>
	</package>

</struts>
